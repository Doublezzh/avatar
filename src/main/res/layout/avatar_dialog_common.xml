<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/common_ll"
        android:layout_width="818dp"
        android:layout_height="267dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/avatar_back_bg"

        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/zyhei"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-35dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negBtn"
            android:layout_width="160dp"
            android:layout_height="68dp"
            android:background="@mipmap/avatar_cancel"
            android:fontFamily="@font/zyhei"
            android:soundEffectsEnabled="false"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Space
            android:layout_width="31dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/posBtn"
            style="@null"
            android:layout_width="160dp"
            android:layout_height="68dp"
            android:background="@mipmap/avatar_gameover"
            android:fontFamily="@font/zyhei"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>
</RelativeLayout>